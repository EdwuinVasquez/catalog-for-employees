{
  "name": "venta_a_empleado",
  "version": "1.0.0",
  "description": "Venta de productos para los empleados",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdwuinVasquez/venta-productosempleados.git"
  },
  "author": "Aprendiz Rimo Edwin Vasquez",
  "license": "MIT",
  "build": {
    "appId": "enupal-electronv1",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "bugs": {
    "url": "https://github.com/EdwuinVasquez/venta-productosempleados/issues"
  },
  "homepage": "https://github.com/EdwuinVasquez/venta-productosempleados#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "electron-reload": "^2.0.0-alpha.1",
    "fs": "^0.0.1-security",
    "moment": "^2.29.4",
    "mysql2": "^3.3.3",
    "path": "^0.12.7",
    "sweetalert2": "^11.7.12",
    "mathjs": "^11.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^22.9.1",
    "jest": "^29.5.0",
    "nodemailer": "^6.9.3"
  }
}
